---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import { render } from "astro:content";
import Divider from "@/components/bases/divider.astro";
import { categoriesHandler } from "@/lib/handlers/categories";
import { getDateDistance } from "@/lib/utils/date";
import { convertNumbersToPersian } from "@/lib/utils/persian-numbers";

type Props = {
  article: CollectionEntry<"articles">;
};

const { article } = Astro.props;

// const category = categoriesHandler.oneCategory(article.data.category.id);
---

<article class="group relative isolate flex flex-col-reverse md:flex-col gap-4">
  <div class="aspect-video overflow-hidden rounded-md">
    <Image
      src=`${process.env.DIRECTUS_BASE_PATH}${article.cover_image.id}`
      alt={article.cover_image.title
        ? article.cover_image.title
        : article.title}
      layout="constrained"
      loading={"eager"}
      width={article.cover_image.width}
      height={article.cover_image.height}
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
    />
  </div>
  <div class="flex flex-col gap-2">
    <div>
      <h2
        class="text-xl font-semibold lg:group-hover:underline underline-offset-2"
      >
        <a href={`/article/${article.id}/${article.slug}`}>
          <span class="absolute inset-0 z-10 pointer-events-none"></span>
          {article.title}
        </a>
      </h2>
      <p class="text-base-content/90 text-base max-w-lg">
        {article.excerpt}
      </p>
    </div>
    <div class="flex items-center text-xs text-base-content/80 mt-2">
      <span class="text-primary dark:text-secondary"
        >{article.category.name}</span
      >
      <Divider />
      <span>{convertNumbersToPersian(getDateDistance(article.date_published))}</span>
    </div>
  </div>
</article>
